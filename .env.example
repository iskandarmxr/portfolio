# ===========================================
# Portfolio Application Environment Variables
# ===========================================
# 
# NOTE: This file is OPTIONAL for local development!
# Default values are set in docker-compose.yml.
# Only create .env if you want to override defaults.
#
# For production, copy this file and set secure values:
#   cp .env.example .env
# ===========================================

# Database
DB_PASSWORD=your_secure_database_password_here

# Rails
RAILS_ENV=production
SECRET_KEY_BASE=generate_with_openssl_rand_hex_64

# Admin User (seeded on first run)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=secure_admin_password_change_me

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost

# Rails Host (for Active Storage URLs)
RAILS_HOST=localhost

# Redis
REDIS_URL=redis://redis:6379/0
