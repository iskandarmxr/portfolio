<%# Admin Skills List %>
<% content_for :title, "Skills" %>

<div class="page-header">
  <div class="header-left">
    <h1>Skills</h1>
    <p class="page-subtitle"><%= @skills.count %> skills in <%= @skills_by_category.keys.count %> categories</p>
  </div>
  <div class="header-actions">
    <a href="<%= new_admin_skill_path %>" class="btn-accent">
      <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M12 5v14M5 12h14"/>
      </svg>
      <span>Add Skill</span>
    </a>
  </div>
</div>

<div class="skills-categories">
  <% @skills_by_category.each do |category, skills| %>
    <div class="category-section glass-card">
      <div class="category-header">
        <h3><%= category.titleize %></h3>
        <span class="skill-count"><%= skills.count %> skills</span>
      </div>
      
      <ul class="skills-sortable" data-category="<%= category %>">
        <% skills.each do |skill| %>
          <li class="skill-item" data-id="<%= skill.id %>">
            <span class="drag-handle">⋮⋮</span>
            <div class="skill-info">
              <span class="skill-name"><%= skill.name %></span>
              <div class="skill-bar-mini">
                <div class="skill-progress" style="width: <%= skill.proficiency %>%"></div>
              </div>
              <span class="skill-proficiency"><%= skill.proficiency %>%</span>
            </div>
            <div class="skill-actions">
              <a href="<%= edit_admin_skill_path(skill) %>" class="action-btn" title="Edit">
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/>
                  <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/>
                </svg>
              </a>
              <%= button_to admin_skill_path(skill), method: :delete, class: "action-btn danger", data: { confirm: "Delete?" } do %>
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <line x1="18" y1="6" x2="6" y2="18"/>
                  <line x1="6" y1="6" x2="18" y2="18"/>
                </svg>
              <% end %>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>

<% if @skills.empty? %>
  <div class="empty-state glass-card">
    <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
      <polyline points="16 18 22 12 16 6"/>
      <polyline points="8 6 2 12 8 18"/>
    </svg>
    <p>No skills added yet</p>
    <a href="<%= new_admin_skill_path %>" class="btn-accent">Add your first skill</a>
  </div>
<% end %>
