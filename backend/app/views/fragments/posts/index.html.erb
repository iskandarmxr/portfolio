<%# Blog Posts Grid Fragment %>
<div class="posts-grid">
  <% @posts.each do |post| %>
    <article class="post-card glass-card">
      <a href="/blog/<%= post.slug %>" class="post-link"
         hx-get="/fragments/posts/<%= post.slug %>"
         hx-target="#post-content"
         hx-push-url="/blog/<%= post.slug %>">
        <% if post.cover.attached? || post.cover_image.present? %>
          <div class="post-image">
            <% if post.cover.attached? %>
              <%= image_tag post.cover, alt: post.title, loading: "lazy" %>
            <% else %>
              <img src="<%= post.cover_image %>" alt="<%= post.title %>" loading="lazy">
            <% end %>
          </div>
        <% end %>
        
        <div class="post-info">
          <div class="post-meta">
            <span class="post-date"><%= post.formatted_date %></span>
            <% if post.reading_time_minutes %>
              <span class="reading-time"><%= post.reading_time_minutes %> min read</span>
            <% end %>
          </div>
          
          <h3 class="post-title"><%= post.title %></h3>
          
          <% if post.excerpt.present? %>
            <p class="post-excerpt"><%= truncate(post.excerpt, length: 150) %></p>
          <% end %>
          
          <% if post.tags.present? && post.tags.any? %>
            <div class="post-tags">
              <% post.tags.first(3).each do |tag| %>
                <span class="tag-badge"><%= tag %></span>
              <% end %>
            </div>
          <% end %>
        </div>
        
        <div class="post-footer">
          <span class="view-count">
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
              <circle cx="12" cy="12" r="3"/>
            </svg>
            <%= number_with_delimiter(post.view_count) %>
          </span>
          <span class="read-more">Read more â†’</span>
        </div>
      </a>
    </article>
  <% end %>
</div>

<% if @posts.empty? %>
  <div class="empty-state">
    <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
      <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
      <polyline points="14 2 14 8 20 8"/>
      <line x1="16" y1="13" x2="8" y2="13"/>
      <line x1="16" y1="17" x2="8" y2="17"/>
      <polyline points="10 9 9 9 8 9"/>
    </svg>
    <p>No posts found</p>
  </div>
<% end %>
